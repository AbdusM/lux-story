{
  "name": "lux-story",
  "version": "2.0.0",
  "type": "module",
  "description": "Performance-based career exploration platform using contemplative storytelling and behavioral psychology",
  "main": "index.js",
  "scripts": {
    "dev": "PORT=3003 next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "validate-skills": "npx tsx scripts/validate-skills-system.ts",
    "validate-env": "npx tsx scripts/validate-env.ts",
    "verify:admin": "npx tsx scripts/verify-production-admin.ts",
    "verify:admin:prod": "npx tsx scripts/verify-production-admin.ts",
    "verify:env:vercel": "vercel env ls",
    "predeploy": "npm run validate-env && npm run test:run && npm run build",
    "deploy": "npx wrangler pages deploy out --project-name=lux-story",
    "deploy:vercel": "npm run validate-env && vercel --prod",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf .next out node_modules/.cache",
    "analyze-typewriter": "node scripts/gemini-typewriter-analysis.js",
    "check-typewriter": "node scripts/check-typewriter-compliance.js",
    "analyze-chat-master": "node scripts/gemini-chat-interface-master-analyzer.js",
    "analyze-skills-dashboard": "node scripts/gemini-skills-dashboard-analyzer.js",
    "audit-config": "npx tsx scripts/audit-configuration.ts",
    "precommit": "npm run check-typewriter && npm run lint",
    "health-check": "curl http://localhost:3003/api/health && curl http://localhost:3003/api/health/db"
  },
  "keywords": [
    "career-exploration",
    "contemplative-gaming",
    "performance-psychology",
    "adaptive-narrative",
    "birmingham"
  ],
  "author": "Lux Story Team",
  "license": "MIT",
  "homepage": "https://lux-story.pages.dev",
  "repository": {
    "type": "git",
    "url": "https://github.com/AbdusM/lux-story.git"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.65.0",
    "@google/generative-ai": "^0.24.1",
    "@radix-ui/react-avatar": "^1.1.10",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-radio-group": "^1.3.8",
    "@radix-ui/react-scroll-area": "^1.2.10",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-toggle": "^1.1.10",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@react-pdf/renderer": "^4.3.1",
    "@sentry/nextjs": "^10.17.0",
    "@supabase/supabase-js": "^2.58.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dotenv": "^17.2.2",
    "lucide-react": "^0.539.0",
    "next": "^15.4.6",
    "playwright": "^1.55.1",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-markdown": "^10.1.0",
    "remark-gfm": "^4.0.1",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^3.4.17",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@next/eslint-plugin-next": "^15.5.3",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^24.2.1",
    "@types/react": "^19.1.9",
    "@types/react-dom": "^19.1.7",
    "@vitejs/plugin-react": "^5.0.2",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.35.0",
    "eslint-config-next": "^15.5.3",
    "jsdom": "^27.0.0",
    "node-fetch": "^3.3.2",
    "postcss": "^8.5.6",
    "puppeteer": "^24.22.3",
    "ts-morph": "^27.0.0",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  }
}
